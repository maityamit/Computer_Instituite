<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="wrap_content">



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/messege_profle_images"
        android:layout_width="40dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo"
        android:layout_height="40dp"/>


    <TextView
        android:id="@+id/recever_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recevire Messages Here"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="40dp"
        android:autoLink="web"
        android:textColorLink="#D50000"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/messege_profle_images"
        android:background="@drawable/reciver_chat_layout"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/sender_message_text"
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="Sender Messages Here"
        android:textColorLink="#283593"
        android:textColor="#000000"
        android:autoLink="web"
        android:layout_alignParentTop="@id/recever_message_text"
        android:layout_alignParentEnd="true"
        android:background="@drawable/sender_chat_layout"
        android:layout_marginTop="10dp"/>



    <TextView
        android:id="@+id/sender_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sender_message_text"
        android:textSize="10sp"
        android:layout_marginEnd="8dp"
        android:textColor="#2E7D32"
        android:layout_alignParentEnd="true"
        android:text="22.10.2021 - 08:09AM"/>

    <TextView
        android:id="@+id/recever_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recever_message_text"
        android:textSize="10sp"
        android:layout_marginStart="50dp"
        android:textColor="#2E7D32"
        android:layout_alignParentStart="true"
        android:text="22.10.2021 - 08:09AM"/>


</RelativeLayout>